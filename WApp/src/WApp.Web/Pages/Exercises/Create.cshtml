@page
@model WApp.Web.Pages.Exercises.CreateModel

@{
    ViewData["Title"] = "Create Exercise";
}

<h1>Create Exercise</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="exerciseDto.Name" class="control-label"></label>
        <input asp-for="exerciseDto.Name" class="form-control" />
        <span asp-validation-for="exerciseDto.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="exerciseDto.Description" class="control-label"></label>
        <textarea asp-for="exerciseDto.Description" class="form-control"></textarea>
        <span asp-validation-for="exerciseDto.Description" class="text-danger"></span>
    </div>

 

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-page="Index" class="btn btn-info">Back to List</a>
</form>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
